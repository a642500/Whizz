<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/toast_background"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"

        >
    <TextView
            android:id="@+id/toast_text"
            android:layout_width="wrap_content" android:layout_height="48dp"
            android:text="@string/app_name"
            android:textColor="@color/main_background"
            android:maxLength="15"
            android:layout_weight="2.5"/>
    <View android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:layout_width="1dp" android:layout_height="20dp" android:layout_gravity="center"
          android:background="@color/line_separate"/>

    <Button
            android:id="@+id/toast_button"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Whizz it !" android:textStyle="italic"/>
</LinearLayout>
