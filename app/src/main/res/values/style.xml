<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryDark">@color/action_bar_dark</item>
        <item name="colorAccent">@color/action_mode_background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:actionModeStyle">@android:style/Widget.Holo.ActionMode</item>
        <item name="android:actionModeBackground">@color/action_mode_background</item>
        <item name="android:actionModeCloseDrawable">@drawable/icon_action_mode_back</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">
            @android:style/Widget.Holo.ActionButton.Overflow
        </item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBar</item>

        <!-- make action mode overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!-- change drawer arrow color-->
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <style name="MyTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/action_bar</item>
        <item name="android:background">@color/action_bar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="MyTheme.MyEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="MyTheme.ButtonBarStyle" parent="android:Holo.Light.ButtonBar">
        <item name="android:divider">@color/main_background</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="BaseTheme.MainTheme"/>

    <style name="BaseTheme.AppTheme"/>
</resources>
